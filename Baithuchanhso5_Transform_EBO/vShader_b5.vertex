#version 330 core
layout (location=0) in vec3 aPos;
layout (location=1) in vec3 aColor;
layout (location=2) in vec2 aTexCoord;  //vị trí thuộc tính đỉnh TexCoord là =2

out vec3 ourColor; // 
out vec2 TexCoord;

uniform mat4 Trans;   //ma tranh chuyen tri ( bao gom: xoay, dịch chuyển, scale)
void main()
{
	gl_Position=Trans*vec4(aPos,1.0);  ///gl_Position giá trị đỉnh đầu ra của vertex shader
	ourColor=aColor;
	TexCoord=aTexCoord;
}   