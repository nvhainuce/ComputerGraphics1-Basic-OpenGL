#version 330 core

layout (location=0) in vec3 aPos;  //vị trí thuộc tính (Position) đỉnh là 0
layout (location=1) in vec3 aColor; //vị trí thuộc tính (color) đỉnh là 0

out vec3 ourColor; // 

void main()
{
	gl_Position=vec4(aPos,1.0);  //=vec4(aPos.x,aPos.y,aPos.z,1.0)
	ourColor=vec3(1.0f,0.0f,0.0f);
}